<%- include ('../../partials/head.ejs') %>
<body>
    <%- include ('../../partials/navbar.ejs') %>
    
    <div class="container">
        <hr>
        <h2>Categorias</h2>
        <a href="/admim/categories/new" class="btn btn-primary">Criar nova categoria</a>
        <br>
        <hr>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Título</th>
                    <th>Slug</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                
                <% categories.forEach(category => {  %>
                
                    <tr>
                        <th><%= category.id %> </th>
                        <th><%= category.title %> </th>
                        <th><%= category.slug %> </th>
                        <th>

                            <a href="/admim/categories/edit/<%= category.id %>">
                                <button class="btn btn-warning">Editar</button>
                            </a>




                            <form action="/categories/delete" method="POST" style ="display: inline;" onsubmit="confirmarDelete(event,this)" >
                                <input type="hidden" 
                                        name = "id" 
                                        value="<%= category.id %>" 
                                >
                                <button class="btn btn-danger">Excluir</button>
                            </form>
                        </th>
                    </tr>
                
                <% }) %>    
            </tbody>
        </table>
        
        
    </div>
</body>
<%- include ('../../partials/footer.ejs') %>
<script>
    function confirmarDelete(event,form){
        event.preventDefault();
        let decision = confirm("Você realmente deseja deletar esta categoria?");
        if(decision){
            form.submit();
        }
    }
</script>